        <main role="main" class="col-md-10 ml-sm-auto px-md-4">
          <div class="d-flex justify-content-start align-items-center">
            <div class="container mt-5">
              <h1 style="color: #fff">Admin Management Dashboard</h1>

              <% if (typeof error !== 'undefined' && error) { %>
              <div class="alert alert-danger" role="alert"><%= error %></div>
              <% } else if (typeof success !== 'undefined' && success) { %>
              <div class="alert alert-success" role="alert"><%= success %></div>
              <% } %>

              <form
                class="mt-3 mb-3"
                action="/admin/admindashboard"
                method="get"
              >
                <div class="input-group">
                  <input
                    type="text"
                    name="q"
                    class="form-control"
                    placeholder="Search by name or email address"
                    value="<%= query || '' %>"
                  />
                  <button type="submit" class="btn btn-primary">Search</button>
                </div>
              </form>
              <table class="table table-striped">
                <thead>
                  <tr>
                    <th>ID</th>
                    <th>Name</th>
                    <th>Email</th>
                    <th>Password</th>
                  </tr>
                </thead>
                <tbody>
                  <% let counter = 1 %> <% const filteredUsers =
                  users?.filter(user => user.usertype === 'Admin') || [] %> <%
                  if (filteredUsers.length > 0) { %> <%
                  filteredUsers.forEach(function(user) { %>
                  <tr>
                    <td><%= counter %></td>
                    <td><%= user.firstname %> <%= user.lastname %></td>
                    <td><%= user.email %></td>
                    <td><%= user.password.substr(0, 8) + '...' %></td>
                  </tr>
                  <% counter++ %> <% }); %> <% } else { %>
                  <tr>
                    <td colspan="4">No users found</td>
                  </tr>
                  <% } %>
                </tbody>
              </table>

